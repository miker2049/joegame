{
  "name": "joegame-lib",
  "version": "0.7.0",
  "description": "A typescript library for high level, functional Phaser 3 control and game creation, featuring bondage, easystarjs, xstate",
  "author": "beepbooptheory",
  "main": "dist/index.js",
  "scripts": {
    "clean": "yarn run rimraf dist",
    "build:js": "yarn run clean && babel -d dist -x \".ts,.js\" src",
    "build:def": "tsc --emitDeclarationOnly --declarationMap",
    "watch:js": "yarn run clean &&  babel -d dist -x \".ts,.js\" -w src",
    "watch:def": "tsc --emitDeclarationOnly --declarationMap --watch",
    "build": "yarn run build:js && yarn run build:def",
    "watch": "yarn run watch:js & yarn run watch:def",
    "postinstall": "cd node_modules/bondage && yarn && cd ../.."
  },
  "license": "MIT",
  "types": "dist/index.d.ts",
  "prettier": "prettier-config-standard",
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jquery": "3.x",
    "@types/marked": "^1.1.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.11.2",
    "@types/papaparse": "^5.2.5",
    "prettier-config-standard": "^4.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "bibtex-parse-js": "^0.0.24",
    "bondage": "https://gitlab.com/beepbooptheory/bondage-js",
    "easystarjs": "^0.4.3",
    "jquery": "^3.5.1",
    "marked": "^1.1.0",
    "papaparse": "^5.3.0",
    "phaser": "3.54.0",
    "tslib": "^2.1.0",
    "url": "^0.11.0",
    "xstate": "^4.13.0"
  }
}
