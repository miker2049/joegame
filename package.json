{
  "name": "joegame",
  "version": "0.1.0",
  "description": "This is the repo home for the main joegame lib",
  "author": "beepbooptheory",
  "scripts": {
    "clean": "yarn rimraf public/*",
    "watchLib": "node scripts/watch-lib-bundle",
    "watchSite": "ELEVENTY_ENV=development yarn eleventy --serve",
    "watch": "yarn run clean && yarn run linkAssets &  yarn run watchLib & yarn run watchSite ",
    "linkAssets": "node scripts/link-assets-dev",
    "copyAssets": "shx mkdir -p public/assets && shx cp -r assets/* public/assets/",
    "buildLib": "node scripts/build-lib-bundle",
    "buildLibApp": "node scripts/build-lib-app-bundle",
    "buildSiteApp": "ELEVENTY_ENV=app yarn eleventy",
    "buildSite": "ELEVENTY_ENV=production yarn eleventy",
    "buildPre": "yarn run clean && yarn run downloadEmoji && yarn run copyAssets",
    "build": "yarn run buildPre && yarn run buildLib && yarn run buildSite",
    "buildApp": "yarn run buildPre && yarn run buildLibApp && yarn run buildSiteApp",
    "watchTypeCheck": "yarn tsc --watch",
    "downloadEmoji": "node scripts/download-emoji.js",
    "test": "node scripts/serve-tests.js",
    "test:node": "ts-mocha -p scripts/tsconfig.json test/tests/node-utils.test.ts"
  },
  "license": "MIT",
  "types": "dist/index.d.ts",
  "prettier": "prettier-config-standard",
  "devDependencies": {
    "@11ty/eleventy-navigation": "^0.2.0",
    "@mapeditor/tiled-api": "^1.6.0",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/jquery": "3.x",
    "@types/marked": "^1.1.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.11.2",
    "@types/papaparse": "^5.2.5",
    "@xstate/inspect": "^0.5.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.1.1",
    "express": "^4.17.1",
    "glob": "^7.1.7",
    "jimp": "^0.16.1",
    "jszip": "^3.6.0",
    "mocha": "^8.3.2",
    "open": "^8.4.0",
    "pako": "^2.0.4",
    "prettier-config-standard": "^4.0.0",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3",
    "sinon": "^11.1.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@11ty/eleventy": "beta",
    "@types/sinon": "^10.0.2",
    "bondage": "https://gitlab.com/joegame/bondage-js",
    "clean-css": "^5.1.2",
    "directory-tree": "^2.2.9",
    "easystarjs": "^0.4.3",
    "esbuild": "^0.13.9",
    "gravisPats": "https://gitlab.com/joegame/gravisPats",
    "jquery": "^3.5.1",
    "marked": "^1.1.0",
    "papaparse": "^5.3.0",
    "phaser": "3.55.2",
    "phaser3-rex-plugins": "https://gitlab.com/joegame/phaser3-rex-notes",
    "recursive-readdir": "^2.2.2",
    "timidity-wasm": "https://gitlab.com/joegame/timidity-wasm#main",
    "uglify-js": "^3.13.8",
    "xstate": "^4.25.0"
  },
  "main": "public/to-library/index.html"
}
