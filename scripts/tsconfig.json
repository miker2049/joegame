{
    "compilerOptions": {
        "target": "es6",
        "types": [
            "node"
        ],
        "lib": ["es2020"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "importHelpers": true,
        "jsx": "react",
        "alwaysStrict": true,
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "esModuleInterop": true,
        "strictNullChecks": false,
        "outDir": "dist"
    },
    "files": [
        "jdb-api-server.ts",
        "mapscripts/cliff-maker.ts",
        "mapscripts/png2tilemap.ts",
        "mapscripts/gen-desert.ts"
    ]
}
