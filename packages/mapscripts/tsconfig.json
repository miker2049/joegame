{
    "compilerOptions": {
        "strictNullChecks": false,
        "noImplicitAny": false,
        "allowJs": true,
        "outDir": "dist",
        "declaration": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "esnext",
        "strict": false,
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
    },
    "exclude": ["./src/*.test.ts"],
    "include": ["src/**/*"],
    "ts-node": {
        "swc": true
    }
}
