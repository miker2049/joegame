{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "strictNullChecks": false,
        "allowJs": true,
        "outDir": "dist",
        "declaration": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "types": ["./esm/lib.d.ts"]
    },
    "exclude": ["./src/*.test.ts"],
    "include": ["src/**/*"],
    "ts-node": {
        "swc": true
    }
}
